{
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/ai-proxy.js": {
      "maxDuration": 300,
      "memory": 1024
    },
    "api/sync/*.js": {
      "maxDuration": 60,
      "memory": 512
    },
    "api/health.js": {
      "maxDuration": 10,
      "memory": 128
    }
  }
}
